# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# Flask Secret Key (use a strong random string in production)
SECRET_KEY=your_secret_key_here_use_a_strong_random_string

# Database URL
# For SQLite (default): sqlite:///restaurant.db
# For PostgreSQL: postgresql://username:password@localhost/restaurant_db
DATABASE_URL=sqlite:///restaurant.db

# Razorpay Payment Gateway Credentials
# Get your keys from: https://dashboard.razorpay.com/app/keys
# Use test keys for development, live keys for production
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Server Configuration (optional)
# PORT=8080
# HOST=0.0.0.0
